<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Button to open Category List Activity -->
    <Button
        android:id="@+id/btnOpenCategoryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Categories"
        android:layout_below="@id/tvMainTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="openCategoryListActivity" />

</RelativeLayout>
